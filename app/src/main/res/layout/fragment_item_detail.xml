


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_container"
        tools:context=".ItemDetailActivity"
        tools:ignore="MergeRootFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/createdAt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="0dp"
                  android:textIsSelectable="true"
                  tools:context=".ItemDetailFragment"
                  android:layout_gravity="center_horizontal|bottom"
                  android:text="@string/content_placeholder"
                  android:layout_below="@+id/editText2"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="41dp"/>

        <TextView android:id="@+id/content"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="0dp"
                  android:textIsSelectable="true"
                  tools:context=".ItemDetailFragment"
                  android:layout_gravity="center"
                  android:text="@string/content_placeholder"
                  android:layout_above="@+id/createdAt"
                  android:layout_centerHorizontal="true"/>

        <TextView android:id="@+id/id"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="0dp"
                  android:textIsSelectable="true"
                  tools:context=".ItemDetailFragment"
                  android:layout_gravity="center_horizontal|top"
                  android:text="@string/content_placeholder"
                  android:layout_above="@+id/editText2"
                  android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="@string/idLabel"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="@string/contentLabel"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/editText"
            android:layout_alignStart="@+id/editText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:text="@string/createdAtLabel"
            android:layout_alignTop="@+id/createdAt"
            android:layout_alignStart="@+id/editText2"/>
    </RelativeLayout>
